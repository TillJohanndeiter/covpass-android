<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout"
  style="@style/Widget.Androidcovpassapp.AppWidget.Container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:theme="@style/CertificateWidgetContainer"
  tools:background="@color/info70">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grid_one">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      android:weightSum="2">

      <ImageView
        android:id="@+id/certificate_status_imageview"
        android:layout_width="@dimen/grid_three"
        android:layout_height="@dimen/grid_two"
        android:layout_gravity="center"
        android:src="@drawable/main_cert_status_complete_white"
        tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:weightSum="8">

      <TextView

        android:id="@+id/certificate_name_textview"
        style="@style/DefaultText.OnInfo"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:lineSpacingMultiplier="1"
        android:text="@string/widget_certificate_loading"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/certificate_qr_imageview"
      style="@style/Header.Info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="false"
      android:contentDescription="@string/accessibility_vaccination_start_screen_label_qrcode"
      android:scaleType="centerInside" />

  </LinearLayout>

</LinearLayout>


