<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rki.covpass.app">

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/cert_app_name"
        android:roundIcon="@mipmap/ic_launcher_round">
        <receiver
            android:name=".widget.CertificateWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/certificate_widget_info" />
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.covpass.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/CovPassAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailExportPdfSaveOptionActivity"
            android:exported="false"
            android:icon="@drawable/save_pdf"
            android:label="@string/certificate_share_pdf_shareitem_android"
            android:theme="@style/CovPassAppTheme" />

      <activity android:name=".widget.CertificateWidgetConfigActivity"
        android:exported="true">
        <intent-filter>
          <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
        </intent-filter>
      </activity>
    </application>

</manifest>
